{
    "name": "@uppercod/markdown-inline",
    "type": "module",
    "version": "0.2.0",
    "description": "Capture text fragments based on regular expressions that are executed for each line of the text",
    "main": "./markdown.cjs",
    "module": "./src/markdown.js",
    "typings": "./types.d.ts",
    "exports": {
        ".": {
            "import": "./src/markdown.js",
            "require": "./markdown.cjs"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "test": "ava",
        "prepare": "npm run build && npm test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/UpperCod/markdown-inline.git"
    },
    "author": "UpperCod",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/UpperCod/markdown-inline/issues"
    },
    "homepage": "https://github.com/UpperCod/markdown-inline#readme",
    "devDependencies": {
        "ava": "^3.10.1",
        "rollup": "^2.21.0"
    },
    "ava": {
        "files": [
            "tests/**/*.test.js"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false
    }
}
